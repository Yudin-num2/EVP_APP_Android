<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_img">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text=""
        style="@style/machine_name_on_sockets"
        android:background="@color/evp_cyan_for_indicators"/>

    <GridLayout
        android:id="@+id/glSockets12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_and_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket1_12"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket2_12"
            android:layout_row="0"
            android:layout_column="1"
            android:text="2"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket3_12"
            android:layout_row="0"
            android:layout_column="2"
            android:text="3"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket4_12"
            android:layout_row="0"
            android:layout_column="3"
            android:text="4"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket5_12"
            android:layout_row="1"
            android:layout_column="0"
            android:text="5"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket6_12"
            android:layout_row="1"
            android:layout_column="1"
            android:text="6"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket7_12"
            android:layout_row="1"
            android:layout_column="2"
            android:text="7"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket8_12"
            android:layout_row="1"
            android:layout_column="3"
            android:text="8"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket9_12"
            android:layout_row="2"
            android:layout_column="0"
            android:text="9"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket10_12"
            android:layout_row="2"
            android:layout_column="1"
            android:text="10"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket11_12"
            android:layout_row="2"
            android:layout_column="2"
            android:text="11"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocket12_12"
            android:layout_row="2"
            android:layout_column="3"
            android:text="12"
            android:background="@drawable/ic_good_socket_button"
            tools:ignore="HardcodedText"
            style="@style/sockets_buttons_text"/>

    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_and_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_save_and_exit_btn"
        android:text="@string/save_and_exit"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/save_and_exit_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>